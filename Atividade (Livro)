package com.mycompany.atividade_livro;

/**
 *
 * @author aluno.den
 */
public class Atividade_livro {

    public static void main(String[] args) {
       Livro livro = new Livro("Miranha", "Stan lee", 150, 18.56f);
        
        System.out.println("Nome do livro: " + livro.getTitulo()); 
        System.out.println("Autor do livro: " + livro.getAutor());
        System.out.println("Páginas: " + livro.getNumero_pagina());
        System.out.println("Preço do livro: R$" + livro.getPreco());
        
    }
}
